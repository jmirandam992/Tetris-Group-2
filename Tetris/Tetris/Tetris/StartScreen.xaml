<Window x:Name="Start_Window" x:Class="Tron.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tron"
        mc:Ignorable="d"
        Title="Tetris" Height="300" Width="500" BorderBrush="White" OpacityMask="White" Foreground="White" Background="White">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/cube-1678974_640.png"/>
        </Grid.Background>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Height="20" Margin="40,160,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="quitButton" Content="Quit" Margin="262,160,155,0" VerticalAlignment="Top" Height="20" Click="quitButton_Click"/>
        <Button x:Name="aboutButton" Content="About" Margin="377,160,40,0" VerticalAlignment="Top" Height="20" Click="aboutButton_Click"/>
        <Button x:Name="scoresButton" Content="Scores" HorizontalAlignment="Left" Margin="155,160,0,0" VerticalAlignment="Top" Width="75" Click="scoresButton_Click" Height="20"/>
        <Label x:Name="label" Content="TETRIS" Height="85" Margin="98,20,98,0" VerticalAlignment="Top" FontFamily="Broadway" FontWeight="Bold" FontSize="72"/>

    </Grid>
</Window>
