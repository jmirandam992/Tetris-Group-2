<Window x:Class="Tron.StartScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tron"
        mc:Ignorable="d"
        Title="Tetris" Height="300" Width="300">
    <Grid>
        <Button x:Name="startButton" Content="Start" HorizontalAlignment="Left" Height="20" Margin="110,31,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
        <Button x:Name="quitButton" Content="Quit" HorizontalAlignment="Left" Margin="110,142,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="quitButton_Click"/>
        <Button x:Name="aboutButton" Content="About" HorizontalAlignment="Left" Margin="110,198,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="aboutButton_Click"/>
        <Button x:Name="scoresButton" Content="Scores" HorizontalAlignment="Left" Margin="110,85,0,0" VerticalAlignment="Top" Width="75" Click="scoresButton_Click"/>

    </Grid>
</Window>
